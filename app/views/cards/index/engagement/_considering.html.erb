<section id="considering-cards" class="cards cards--considering" data-drag-and-drop-target="container"  data-drop-target="considering">
  <div class="cards__decoration"></div>
  <% if collection = @filter.single_collection || Current.user.collections.first %>
    <div class="card card--new">
      <%= button_to collection_cards_path(collection), method: :post, class: "btn" do %>
        <%= icon_tag "add" %>
        <span>Add a card</span>
    </div>
    <% end %>
  <% end %>
  <% if page.used? %>
    <%= render partial: "cards/display/preview", collection: page.records, as: :card, locals: { draggable: true }, cached: true %>

    <% unless page.last? %>
      <div class="full-width">
        <%= cards_next_page_link "considering-cards", page: page, filter: filter %>
      </div>
    <% end %>
  <% end %>
  <div class="cards__decoration cards__decoration--end"></div>
</section>
